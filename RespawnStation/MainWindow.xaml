<Window x:Class="RespawnStation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:scott="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        Title="Respawn Station BGA" WindowState="Maximized" WindowStyle="None" Background="#110016">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Gráfico -->
        <Border Grid.Column="0" CornerRadius="8" Background="#0F0814" Padding="10" Margin="6">
            <scott:WpfPlot Name="wpfPlot" />
        </Border>

        <!-- Painel direito -->
        <StackPanel Grid.Column="1" Margin="6" VerticalAlignment="Top">
            <TextBlock Text="RESPAWN BGA" Foreground="#DCD6FF" FontSize="28" FontWeight="Bold" Margin="6"/>
            <StackPanel Orientation="Horizontal" Margin="6">
                <Button Name="btnStart" Width="120" Height="48" Margin="6" Click="BtnStart_Click">START</Button>
                <Button Name="btnStop" Width="120" Height="48" Margin="6" Click="BtnStop_Click">STOP</Button>
            </StackPanel>

            <GroupBox Header="Temperaturas" Margin="6">
                <StackPanel>
                    <TextBlock Name="lblPV" Text="PV: -- °C" Foreground="White" FontSize="16" Margin="4"/>
                    <TextBlock Name="lblSP" Text="SP: -- °C" Foreground="White" FontSize="16" Margin="4"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Comunicação" Margin="6">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="COM:" VerticalAlignment="Center" Margin="4"/>
                        <ComboBox Name="cbPorts" Width="120" Margin="4"/>
                        <Button Name="btnOpen" Click="BtnOpen_Click" Margin="4">Abrir</Button>
                    </StackPanel>
                    <TextBlock Name="lblComm" Text="Status: Offline" Foreground="Orange" Margin="4"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Perfis" Margin="6">
                <StackPanel>
                    <Button Name="btnEditProfile" Click="BtnEditProfile_Click" Margin="4">Editar Perfil</Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>

